@model MangoRead.Domain.ViewModels.Manuscript.ManuscriptContentViewModel

@{
    ViewData["Title"] = "Upload";
}

<h1>Upload</h1>

<h4>Please, add content to <i>@Model.Manuscript?.Title</i></h4>
<p>
    You should upload <b>rar</b> or <b>zip</b> file named like title you choosed. Inner structure: <b>Volume N -> Chapter M -> #.(extension for pic)</b>.
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">                
                <span style="color: red">@ViewBag.Message</span>
                <br />
                <label asp-for="Files" class="control-label"></label>
                <input asp-for="Files" class="form-control" webkitdirectory/>
                <span asp-validation-for="Files" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
