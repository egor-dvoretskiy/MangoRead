@using MangoRead.Domain.Enums;
@model MangoRead.Domain.ViewModels.Manuscript.ManuscriptEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1><span class="_index-manuscript-edit">Edit</span> #<i>@Model.Id</i></h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher" class="control-label"></label>
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Translator" class="control-label"></label>
                <input asp-for="Translator" class="form-control" />
                <span asp-validation-for="Translator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginCountry" class="control-label"></label>
                <input asp-for="OriginCountry" class="form-control" />
                <span asp-validation-for="OriginCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<ManuscriptType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"></input>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genres" class="control-label"></label>
                <select asp-for="Genres" asp-items="Model.GenresList" class="form-control"></select>
                <span asp-validation-for="Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsRequireLegalAge" class="control-label"></label>
                <input type="checkbox" asp-for="IsRequireLegalAge" class="form-check-input"/>
                <span asp-validation-for="IsRequireLegalAge" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary _save-button"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="_edit-manuscript-back">Back to List</a>
</div>
