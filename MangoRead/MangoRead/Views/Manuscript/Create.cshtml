@using MangoRead.Domain.Enums;

@model MangoRead.Domain.ViewModels.Manuscript.ManuscriptCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h4 class="_create-manuscript-title">Manuscript creation form</h4>
<hr />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher" class="control-label"></label>
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Translator" class="control-label"></label>
                <input asp-for="Translator" class="form-control" />
                <span asp-validation-for="Translator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginCountry" class="control-label"></label>
                <input asp-for="OriginCountry" class="form-control" />
                <span asp-validation-for="OriginCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<ManuscriptType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genres" class ="control-label"></label>
                <select asp-for="Genres" asp-items="Html.GetEnumSelectList<Genre>()" class="form-control genres-list" size="7" multiple required></select>
                <span asp-validation-for="Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsRequireLegalAge" class="control-label"></label>
                <input type="checkbox" asp-for="IsRequireLegalAge" class="form-check-input"/>
                <span asp-validation-for="IsRequireLegalAge" class="text-danger"></span>
            </div>  
            <br/>
        
            <div class="form-group">                
                <button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
                @*<input type="submit" class="btn btn-primary" />*@
            </div>               
        </div> 
        
        <div class="col-md-6 d-flex justify-content-center">
            <div class="form-group">
                <label asp-for="TitlePicture" style="width: 100%;" class="form-label"></label>
                <img id="titleImage" style="width:250px;height:356px; object-fit:cover" src="">
                <input type="file"
                        accept=".png,.jpg,.jpeg,.gif,.tif"
                        asp-for="TitlePicture"
                        class="form-control"
                        style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                        onchange="document.getElementById('titleImage').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="TitlePicture" class="text-danger"></span>
            </div>
        </div> 
    </div>
</form>  

<div>
    <a asp-action="Index" class="_edit-manuscript-back">Back to List</a>
</div>