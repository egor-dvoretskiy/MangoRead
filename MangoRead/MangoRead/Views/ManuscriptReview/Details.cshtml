@using MangoRead.Domain.Enums
@using MangoRead.Domain.Models.Account
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<ApplicationUser> _signInManager
@model MangoRead.Domain.ViewModels.Review.ReviewDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ReviewDetailsViewModel #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>

<div class="row mb-4">
    <ul class="list-inline">        
        <li class="list-inline-item">    
            <a class="btn btn-info" data-mdb-ripple-color="dark" asp-area="" asp-controller="Manuscript" asp-action="Details" asp-route-id="@Model.ManuscriptId">Return to manuscript</a>
        </li>
        @if (_signInManager.IsSignedIn(User))
        {        
            @if (User.IsInRole("Basic"))
            {
                <li class="list-inline-item">  
                    <a class="btn btn-info" data-mdb-ripple-color="dark" asp-area="Identity" asp-page="/Account/Manage/ReviewManagement/ReviewManagementBasic">Manage</a>
                </li>
            }
            else
            {
                <li class="list-inline-item">  
                    <a class="btn btn-info" data-mdb-ripple-color="dark" asp-area="Identity" asp-page="/Account/Manage/ReviewManagement/ReviewManagementAdvanced">Manage</a>
                </li>
            }

            @if (User.Identity.Name == Model.UserName || User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
            {
                <li class="list-inline-item">            
                    <a asp-area="" asp-controller="ManuscriptReview" asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.Id" data-mdb-ripple-color="dark">Edit</a>
                </li>
            }

            @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
            {
                @if (Model.ApprovalStatus != ApprovalStatus.Approved)
                {
                    <li class="list-inline-item">            
                        <a onclick="assignTransposition(true)" asp-area="" asp-controller="ManuscriptReview" asp-action="Approve" class="btn btn-success" asp-route-id="@Model.Id" data-mdb-ripple-color="dark">Approve</a>
                    </li>
                }
                @if (Model.ApprovalStatus != ApprovalStatus.Rejected)
                {
                    <li class="list-inline-item">            
                        <a onclick="assignTransposition(true)" asp-area="" asp-controller="ManuscriptReview" asp-action="Reject" class="btn btn-warning" asp-route-id="@Model.Id" data-mdb-ripple-color="dark">Reject</a>
                    </li>
                }
                <li class="list-inline-item">            
                    <a asp-area="" asp-controller="ManuscriptReview" asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.Id" data-mdb-ripple-color="dark">Delete</a>
                </li>
            }
        } 
    </ul>
</div>
