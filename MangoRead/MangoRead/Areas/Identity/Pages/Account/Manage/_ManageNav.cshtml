@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="nav-link _profile @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="nav-link _email @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item"><a class="nav-link _password @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link _external-logins @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="nav-item"><a class="nav-link _tf-authentification @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item"><a class="nav-link _personal-data @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
    
    @if(User.IsInRole("Basic"))
    {
        <li class="nav-item">
            <a class="nav-link _manuscript-management @ManageNavPages.ManuscriptManagementBasicNavClass(ViewContext)" asp-area="Identity" asp-page="/Account/Manage/ManuscriptManagement/ManuscriptManagementBasic">Manuscript Management</a>
        </li>
        <li class="nav-item">
            <a class="nav-link _review-management @ManageNavPages.ReviewManagementBasicNavClass(ViewContext)" asp-area="Identity" asp-page="/Account/Manage/ReviewManagement/ReviewManagementBasic">Review Management</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link _manuscript-management @ManageNavPages.ManuscriptManagementAdvancedNavClass(ViewContext)" asp-area="Identity" asp-page="/Account/Manage/ManuscriptManagement/ManuscriptManagementAdvanced">Manuscript Management</a>
        </li>
        <li class="nav-item">
            <a class="nav-link _review-management @ManageNavPages.ReviewManagementAdvancedNavClass(ViewContext)" asp-area="Identity" asp-page="/Account/Manage/ReviewManagement/ReviewManagementAdvanced">Review Management</a>
        </li>
    }

    

    @if(User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link _control-panel @ManageNavPages.AdminPanelNavClass(ViewContext)" id="admin-panel" asp-area="Identity" asp-page="/Account/Manage/AdminPanel">Control panel</a>
        </li>
    }
</ul>
