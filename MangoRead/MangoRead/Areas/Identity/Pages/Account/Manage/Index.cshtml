@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="_profile">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<partial name="_StatusMessage" model="Model.UserNameChangeLimitMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-4">
                    <input asp-for="ProfileViewModel.FirstName" class="form-control" />
                    <label asp-for="ProfileViewModel.FirstName"></label>
                    <span asp-validation-for="ProfileViewModel.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="ProfileViewModel.LastName" class="form-control" />
                    <label asp-for="ProfileViewModel.LastName"></label>
                    <span asp-validation-for="ProfileViewModel.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="ProfileViewModel.Username" class="form-control" />
                    <label asp-for="ProfileViewModel.Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="ProfileViewModel.PhoneNumber" class="form-control" />
                    <label asp-for="ProfileViewModel.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="ProfileViewModel.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </div>
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProfileViewModel.ProfilePicture" style="width: 100%;" class="form-label"></label>
                @if (Model.ProfileViewModel.ProfilePicture != null)
                {
                    <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.ProfileViewModel.ProfilePicture))">
                }
                else
                {
                    <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                }
                <input type="file"
                        accept=".png,.jpg,.jpeg,.gif,.tif"
                        asp-for="ProfileViewModel.ProfilePicture"
                        class="form-control"
                        style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                        onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="ProfileViewModel.ProfilePicture" class="text-danger"></span>
            </div>
            </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
